{
  "devDependencies": {
    "husky": "^3.0.0",
    "lint-staged": "^9.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c tslint.json --fix",
      "prettier --write",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  }
}
