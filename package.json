{
  "name": "package-integration",
  "version": "1.0.0",
  "description": "A tool",
  "main": "dest/main.js",
  "bin": {
    "npi": "./bin/npi"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf dest && tsc",
    "start:dev": "nodemon",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -c tslint.json 'src/**/*.ts' --fix"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.muffag.ch:7999/dev/node-package-integration.git"
  },
  "dependencies": {
    "colors": "^1.3.3",
    "fs-extra": "^8.0.1",
    "inquirer": "^6.3.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^7.0.0",
    "@types/inquirer": "^6.0.2",
    "@types/node": "^11.13.10",
    "nodemon": "^1.19.0",
    "tslint": "^4.5.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.1.6"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "npm run build"
  },
  "author": "Muff Kirchturmtechnik AG",
